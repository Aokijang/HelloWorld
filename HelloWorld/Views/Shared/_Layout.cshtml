<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HelloWorld</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background: #166CB5;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HelloWorld", "Index", "Home", new { area = "" }, new { @class = "navbar-brand putih" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Post", "Index", "Messages")</li>
                    <li>@Html.ActionLink("Assignment", "Index", "Assignments")</li>
                    <li>@Html.ActionLink("Note", "Index", "Notes")</li>
                    <li>@Html.ActionLink("Note", "Index", "TaskLists")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="col-lg-2 navbar-inverse" style="top: 0; border-radius: 0; left: 0; z-index: 1; margin: 0; position: fixed;">
        <ul class="nav navbar-inverse nav-pills nav-stacked" style="color: white">
            <li style="padding: 18px 13px; font-size: 17px">Home</li>
            <li style="padding: 18px 13px; font-size: 17px">About</li>
            <li style="padding: 18px 13px; font-size: 17px">Help</li>
            <li style="padding: 18px 13px; font-size: 17px">Inbox</li>
            <li style="padding: 18px 13px; font-size: 17px">Note</li>
            <li style="padding: 18px 13px; font-size: 17px">Assignment</li>
            <li style="padding: 18px 13px; font-size: 17px">Quiz</li>
            <li style="padding: 18px 13px; font-size: 17px">Discussion</li>
            <li style="padding: 18px 13px; font-size: 17px">Task List</li>
        </ul>
    </div>
    <div class="container body-content">
        <div class="col-lg-2"></div>
        <div class="col-lg-10" style="margin-top: 20px;">
        @RenderBody()

        
        </div>
    </div>
    <div class="body-content" style="background: gray; padding: 15px; bottom: 0; position: fixed; width: 100%;">
        <footer>

            <hr />
            <div class="col-lg-2">
                FAQ
            </div>

            <div class="col-lg-2">
                About Us
            </div>

            <div class="col-lg-2">
                Tell Us
            </div>

            <div class="col-lg-2">
                Contact Us
            </div>
            <p>&copy; @DateTime.Now.Year - HelloWorld</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
